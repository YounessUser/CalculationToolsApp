<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firstColor">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/userConnecte"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"/>
        <TextView
            android:text="se dÃ©connecter"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"/>

    </LinearLayout>

    <Button
        android:id="@+id/departement"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="departement"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:background="@drawable/back_btn_menu"
        android:layout_margin="5dp"
        android:onClick="departementClick"/>

    <Button
        android:id="@+id/demandCategory"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="demandcategory"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:background="@drawable/back_btn_menu"
        android:layout_margin="5dp"
        android:onClick="demandCategoryClick"/>

    <Button
    android:id="@+id/configuration"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Configuration"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:background="@drawable/back_btn_menu"
        android:layout_margin="5dp"
        android:onClick="configurationClick"/>

    <Button
        android:id="@+id/notification"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:background="@drawable/back_btn_menu"
        android:layout_margin="5dp"
        android:onClick="notificationClick"/>

    

</LinearLayout>